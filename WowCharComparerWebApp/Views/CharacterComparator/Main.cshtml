@{
    ViewData["Title"] = "CharacterComparatorView";


}

<h2>CharacterComparatorView</h2>

@model WowCharComparerLib.Models.Localization.Realm
<form asp-controller="CharacterComparator" asp-action="LoadRealmData" method="post" class="form-horizontal" role="form">
    <div class="form-group">
        <div class="row">
            <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                <label asp-for="Name" class="control-label"></label>
                <select asp-for="Name"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.ListOfRealms, "Name"))">
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                <input id="Submit1" type="submit" value="submit" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                @if (ViewBag.SelectedValue != null)
                {
                    <text>Selected Country ID: </text> @ViewBag.SelectedValue;
                }
            </div>
        </div>
    </div>
</form>

<form action="CompareResult" method="post">

    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">Characters Name:</span>
        </div>
        <div class="form-inline">

            <input name="firstNickToCompare"
                   type="text"
                   aria-label="FirstCharacterName"
                   class="form-control"
                   placeholder="Write nick to compare"
                   style="width: 200px" />
        </div>
        <input name="secondNickToCompare"
               type="text"
               aria-label="FirstCharacterName"
               class="form-control"
               placeholder="Write nick to compare"
               style="width: 200px" />

        <button type="submit"
                class="btn btn-secondary btn-sm pull-left">
            Pass nickname
        </button>
    </div>
</form>
