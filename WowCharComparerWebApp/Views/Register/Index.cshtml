@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/register-page.css" />
@model WowCharComparerWebApp.Models.Internal.User

@using (Html.BeginForm("PerformUserRegister", "Register", FormMethod.Post))
{
    <div id="register-form-holder">
        <div class="form-group">
            <label class="col-md-4 control-label" for="usernameInput">Username</label>
            <div class="col-md-4">
                <input id="usernameInput" name="accountName" type="text" placeholder="Username" class="form-control input-md">
            </div>
        </div>

        <br />

        <div class="form-group">
            <label class="col-md-4 control-label" for="passwordinput">Password</label>
            <div class="col-md-4">
                <input id="passwordInput" name="userPassword" type="password" placeholder="Password" class="form-control input-md">
            </div>
        </div>

        <br />

        <div class="form-group">
            <label class="col-md-4 control-label" for="emailAdressInput">Adress Email</label>
            <div class="col-md-4">
                <input id="emailAdressInput" name="userEmail" type="text" placeholder="Email" class="form-control input-md">
            </div>
        </div>

        <br />

        <div class="form-group">
            <label class="col-md-4 control-label" for="singlebutton"></label>
            <div class="col-md-4">
                <button id="singlebutton" name="singlebutton" class="btn btn-primary">Register</button>
            </div>
        </div>
    </div>
}